{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vite.config.ts",
    "playground"
  ]
}