{
  "name": "react-circle-text",
  "version": "1.0.6",
  "description": "Lightweight React component for circular text rendering",
  "keywords": [
    "react",
    "circular text",
    "canvas",
    "ui"
  ],
  "license": "MIT",
  "author": "Hovhannes Khachatryan",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "assets"
  ],
  "main": "dist/react-circle-text.umd.js",
  "module": "dist/react-circle-text.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/react-circle-text.es.js",
      "require": "./dist/react-circle-text.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "canvas": "^3.2.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}